{
  "compilerOptions": {
    "baseUrl"                 : "src",
    "module"                  : "commonjs",
    "target"                  : "es2015",
    "noImplicitAny"           : true,
    "sourceMap"               : true,
    "typeRoots"               : ["node_modules/@types"],
    "outDir"                  : "build",
    "declaration"             : true,
    "emitDecoratorMetadata"   : true,
    "experimentalDecorators"  : true,
    "strictNullChecks"        : true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

